<!--태블릿 & 데스크탑 환경 start-->
<div class="hide-on-small-only">
  <div style="position: relative;">
    <img src="../../assets/택시플상세로고.jpg">
    <section class="login-box">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name) ) do |f| %>
        <%= devise_error_messages! %>
    
        <div class="login-content">
          <%= f.radio_button :campus, false, :style => "width: 7%;"%> <%= f.label :campus_false, "본캠", :style => "margin: 1em;" %> 
          <%= f.radio_button :campus, true, :style => "width: 7%;" %> <%= f.label :campus_true, "부캠", :style => "margin: 1em;" %> 
        </div>
        
        
        <div class="login-content">
          <%= f.email_field :email, autofocus: true, :class => "login-mail", :placeholder => "웹메일"  %>
        </div>
        
        <div class="login-content">
        <%= f.text_field :student_name, autofocus: false, :class => "login-mail", :placeholder => "닉네임"   %><br />
        </div>
        <div class="login-content" style="color: white">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", :class => "login-pass", :placeholder => "비밀번호"  %>
        </div>
      
        <div class="login-content">
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => "login-pass", :placeholder => "비밀번호 재입력"  %>
        </div>
      
        <div class="actions login-content">
          <%= f.submit "회원가입", :class => "login-enter btn" %>
        </div>
        <br>
        <%#= render "devise/shared/links" %>
        <%- if controller_name != 'sessions' %>
          <%= link_to "로그인", new_session_path(resource_name), :class => "login-bottom-text" %>  &nbsp;&nbsp;<span style="color: white;">|</span>&nbsp;&nbsp;
        <% end -%>
        <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
          <%= link_to "확인 메일을 못 받으셨나요?", new_confirmation_path(resource_name), :class => "login-bottom-text" %><br />
        <% end -%>
        
        
      <% end %>
    </section>
  </div>
</div>
<!--모바일 환경 start-->
<div class="navbar hide-on-med-and-up">
  <div style="position: relative;  text-align: center; background-color: #F5C71D; height: 100%; padding-bottom: 2em;">
    <img src="../../assets/택시플전체로고.jpg" style="width: 50%;">
    <div style="text-align: center; width: 45%; margin: 0.5em;">
      <a class="login-bottom-text" href="#">이용방법</a>
    </div>
    <section class="login-box">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name) ) do |f| %>
        <%= devise_error_messages! %>


        <!--<div class="login-content">-->
        <!--  <%#= f.radio_button :campus, false, :class => "with-gap", :id => "campus_false", :style => "position: absolute;"%> <%#= f.label :campus_false, "본캠" %>-->
        <!--  <%#= f.radio_button :campus, true, :class => "with-gap", :id => "campus_false", :style => "position: absolute;" %> <%#= f.label :campus_true, "부캠" %>-->
        <!--</div>-->
        
        <div class="login-content" style="width: auto;">
          <%= f.email_field :email, autofocus: true, :class => "login-inputbox", :placeholder => "웹메일" %>
        </div>
        
        <div class="login-content" style="width: auto;">
        <%= f.text_field :student_name, autofocus: false, :class => "login-inputbox", :placeholder => "닉네임" %><br />
        </div>
        <div>
          <label>캠퍼스</label>
          <div class="campus_select" style="display: inline-block;">
          <%= f.select(:campus) do %>
            <% [['본캠', 1], ['부캠', 2]].each do |c| -%>
              <%= content_tag(:option, c.first, value: c.last) %>
