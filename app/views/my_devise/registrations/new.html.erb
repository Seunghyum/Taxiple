          <%= f.password_field :password, autocomplete: "off", :class => "login-inputbox" , :placeholder => "비밀번호" %>
        </div>
      
        <div class="login-content" style="width: auto;">
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => "login-inputbox", :placeholder => "비밀번호 재입력"%>
        </div>
      
        <div class="actions login-content" style="width: auto;">
          <%= f.submit "회원가입", :class => "login-enter btn", :style => "width: 6.6em; border-radius: 10px; background-color: #F5C71D;" %>
        </div>
        <br>
        <%#= render "devise/shared/links" %>
        <%- if controller_name != 'sessions' %>
          <%= link_to "로그인", new_session_path(resource_name), :class => "login-bottom-text" %>  &nbsp;&nbsp;<span style="color: white;">|</span>&nbsp;&nbsp;
        <% end -%>
        <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
          <%= link_to "확인 메일을 못 받으셨나요?", new_confirmation_path(resource_name), :class => "login-bottom-text" %><br />
        <% end -%>
        
        
      <% end %>
    </section>
  </div>
</div>
